#for_window [instance="Firefox"] move container to workspace 3 

# start ranger
#bindsym $mod+Shift+w exec $term_exec ranger

# start htop
bindsym Control+Shift+Escape exec $term_exec htop

# sound manager
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+ && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%- && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec amixer -D pulse sset Master toggle && pkill -RTMIN+1 i3blocks

# backlight manager
bindcode 233 exec "xbacklight +2"
bindcode 232 exec "xbacklight -2"

# Night lights
bindsym $mod+m exec --no-startup-id redshift -P -O 2000k 
bindsym $mod+Shift+m exec --no-startup-id redshift -P -O 6500k

# wifi settings
bindsym $mod+F8 exec nm-connection-editor
bindsym $mod+Shift+F8 exec $term_exec 'sudo wifi-menu'

# Lock screen
bindsym $mod+c exec --no-startup-id ~/setup/dotfiles/i3lock/lock

# Power
bindsym $mod+BackSpace exec ~/setup/dotfiles/i3lock/lock && systemctl suspend
bindsym $mod+Delete exec ~/setup/dotfiles/i3lock/power_menu.sh 
